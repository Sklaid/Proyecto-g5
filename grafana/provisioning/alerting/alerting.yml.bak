apiVersion: 1

# List of contact points to send notifications
contactPoints:
  - orgId: 1
    name: webhook-notifications
    receivers:
      - uid: webhook-receiver
        type: webhook
        settings:
          url: http://localhost:8080/webhook
          httpMethod: POST
        disableResolveMessage: false

# Notification policies
policies:
  - orgId: 1
    receiver: webhook-notifications
    group_by:
      - alertname
      - service
    group_wait: 30s
    group_interval: 5m
    repeat_interval: 4h
    routes:
      - receiver: webhook-notifications
        matchers:
          - severity = critical
        group_wait: 10s
        repeat_interval: 1h
      - receiver: webhook-notifications
        matchers:
          - severity = high
        group_wait: 30s
        repeat_interval: 2h
